endif

ifdef CONFIG_APP_MINIX2
	TAGS += minix2/|
endif

ifdef CONFIG_APP_MINIX3
	TAGS += minix3/|
endif

ifdef CONFIG_APP_MISC_UTILS
	TAGS += misc_utils/|
endif

ifdef CONFIG_APP_TUI
	TAGS += tui/|
endif

ifdef CONFIG_APP_NANOX
