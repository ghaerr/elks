	./exomizer raw -q -b -d vec.h.exo -e @test_enc
	cmp vec.h a.out
	./exomizer raw -q -b -d 6502emu.c.exo -e @test_enc
	cmp 6502emu.c a.out
	./exomizer raw -q -b -d buf.h.exo -e @test_enc
