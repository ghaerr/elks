	cmp test_enc test_enc2
	./exomizer raw -q -r -d vec.h.exo -e @test_enc
	cmp vec.h a.out
	./exomizer raw -q -r -d 6502emu.c.exo -e @test_enc
	cmp 6502emu.c a.out
	./exomizer raw -q -r -d buf.h.exo -e @test_enc
